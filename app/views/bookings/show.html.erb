<div class="container">
  <div class="row">
    <div class="col-md-5">
      <p>
        <%= image_tag "https://kitt.lewagon.com/placeholder/users/Artmen12", class: "avatar" %>
        <%= @booking.user.username %>
      </p>
      <div>
        <%= image_tag "https://cdn.pixabay.com/photo/2017/08/06/09/14/people-2590564_960_720.jpg", class: "course-img" %>
      </div>
    </div>
    <div class="col-md-7">
      <p>
        <h1 class="text-center">Your booking</h1>
      </p>
      <p>
        <%= @booking.course.title %>
      </p>

      <p>
        <strong>Description:</strong>
        <%= @booking.course.description %>
      </p>

      <p>
        <strong>Duration:</strong>
        <%= @booking.course.duration %> min
      </p>

      <p>
        <strong>Address:</strong>
        <%= @booking.course.address %>
      </p>

      <div id="map"
           style="width: 50%; height: 200px;"
           data-markers="<%= @markers.to_json %>"
           data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>

      <p>
        <strong>Price:</strong>
        <%= @booking.course.price %> â‚¬
      </p>

      <p>
        <strong>When </strong>
        <%= @booking.course.date %>
      </p>


  <%= link_to bookings_path, :class => "btn p-3 mr-3 mb-4 form-button btn-secondary" do %>
  <i class="fas fa-long-arrow-alt-left"> Back</i>
  <% end %>

  <%= link_to courses_path, :class => "btn p-3 mr-3 mb-4 form-button btn-danger" do %>
  <i class="fas fa-trash-alt"> Delete</i>
  <% end %>
</div>
